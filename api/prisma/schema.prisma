generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id
  name      String
  email     String    @unique
  password  String
  createdAt DateTime
  updatedAt DateTime
  projects  Project[]
  role      Role
}

enum Role {
  ADMIN
  FREE
  PREMIUM
}

model Project {
  id          String        @id
  title       String
  description String
  revenue     Float
  createdAt   DateTime
  icon        String
  color       String
  updatedAt   DateTime
  status      ProjectStatus
  tasks       Task[]
  ownerId     String
  owner       User          @relation(fields: [ownerId], references: [id])
  costs       Cost[]
}

enum ProjectStatus {
  IN_PROGRESS
  FINISHED
}

enum TaskStatus {
  PENDING
  COMPLETED
}

model Task {
  id          String       @id
  title       String
  description String
  createdAt   DateTime
  updatedAt   DateTime
  completedAt DateTime?
  status      TaskStatus
  dueDate     DateTime
  priority    TaskPriority
  project     Project      @relation(fields: [projectId], references: [id])
  projectId   String
}

enum TaskPriority {
  LOW
  MEDIUM
  HIGH
}

model Cost {
  id        String   @id
  title     String
  value     Float
  createdAt DateTime
  updatedAt DateTime

  project   Project @relation(fields: [projectId], references: [id])
  projectId String
}
